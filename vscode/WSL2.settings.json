{
  // Basic
  "editor.accessibilitySupport": "off",
  "editor.autoIndent": "full",
  "editor.detectIndentation": false,
  "editor.fontFamily": "'UDEV Gothic JPDOC', 'UDEV Gothic NF'",
  "editor.fontSize": 14,
  "editor.formatOnSave": false,
  "editor.guides.indentation": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": true,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 4,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.wordWrap": "on",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.pyc": true,
    "**/__pycache__": true
  },
  "terminal.integrated.defaultProfile.linux": "zsh (login)",
  "terminal.integrated.profiles.linux": {
    "bash (login)": {
      "path": "bash",
      "args": [
        "-l"
      ],
      "icon": "terminal-bash",
      "overrideName": true
    },
    "zsh (login)": {
      "path": "zsh",
      "args": [
        "-l"
      ],
      "overrideName": true
    }
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.showTabs": "multiple",
  "workbench.colorTheme": "Everforest Dark",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  //
  // Extensions
  //
  // Ansible
  "redhat.telemetry.enabled": false,
  // GitHub Copilot
  "github.copilot.editor.enableAutoCompletions": true,
  // Draw.io
  "hediet.vscode-drawio.resizeImages": null,
  // catppuccin colorscheme settings
  "catppuccin.italicComments": false,
  "catppuccin.italicKeywords": false,
  "catppuccin.accentColor": "sapphire",
  // everforest colorscheme settings
  "everforest.italicComments": false,
  // indent-rainbow
  "indentRainbow.indicatorStyle": "light",
  // ShellCheck
  "shellcheck.run": "onSave",
  // Python
  "python.analysis.typeCheckingMode": "basic",
  "black-formatter.args": [
    "--line-length",
    "99"
  ],
  "flake8.args": [
    "--max-line-length",
    "120"
  ],
  "isort.args": [
    "--profile",
    "black",
    "--line-length",
    "99"
  ],
  "pylint.args": [
    "--max-line-length",
    "120"
  ],
  // Markdown
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.orderedList.marker": "one",
  "markdownlint.run": "onSave",
  "markdownlint.config": {
    "MD033": {
      "allowed_elements": [
        "a",
        "br",
        "pre"
      ]
    },
    "MD007": {
      "indent": 4
    },
    "MD029": {
      "style": "one"
    }
  },
  // Textlint
  "textlint.configPath": "/home/akihiro_kaji/.config/textlint/.textlintrc.json",
  "textlint.run": "onSave",
  "textlint.languages": [
    "markdown"
  ],
  // File Type
  "[json]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  "[lua]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[shellscript]": {
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[terraform]": {
    "editor.autoIndent": "full",
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.tabSize": 2
  },
  "[helm]": {
    "editor.tabSize": 2
  }
}